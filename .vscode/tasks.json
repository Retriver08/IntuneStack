{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run PSScriptAnalyzer",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-c",
                "./scripts/Invoke-CodeQuality.ps1"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Fix PowerShell Formatting",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-c",
                "./scripts/Invoke-CodeQuality.ps1 -Fix"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dev Environment",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-c",
                "./scripts/Install-DevEnvironment.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
